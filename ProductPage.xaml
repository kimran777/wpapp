    <StackPanel>
        <TextBlock Text="продукт" TextWrapping="Wrap" x:Name="productName" FontSize="{StaticResource PhoneFontSizeMediumLarge}"/>
        <TextBlock Text="старая цена: 23.523" TextWrapping="Wrap" x:Name="oldPrice" FontSize="{StaticResource PhoneFontSizeMedium}" />
        <TextBlock Text="новая цена: 23.2342" TextWrapping="Wrap" x:Name="newPrice" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
        <TextBlock Text="Дата начала акции: " TextWrapping="Wrap" x:Name="startDate" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
        <TextBlock Text="Дата начала акции: " TextWrapping="Wrap" x:Name="endDate" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
    </StackPanel>
    -->
</phone:PhoneApplicationPage>